
  <div class="container">
    <div class="row justify-content-center">
      <% @tiny_homes.all.first(3).each do |th| %>
        <div class="col-12 col-lg-4">

          <%= link_to tiny_home_path(th) do %>
            <div class="card-trip">
              <% if th.photos[0].present?%>
                <%= cl_image_tag th.photos[0].key, crop: :fill %>
              <% else %>
                <img src="https://thelittlerebellion.com/wp-content/uploads/Sojourner-1-881x589-1.jpg" />
              <% end %>
              <div class="card-trip-infos">
                <div>
                  <h2><%= th.name %></h2>
                  <p><%= th.description %></p>
                </div>
                <h2 class="card-trip-pricing">$<%= th.price %>/day</h2>
                <% if th.photos[0].present?%>
                  <%= cl_image_tag th.user.avatar.key, crop: :fill, class: 'card-trip-user avatar-bordered' %>
                <% else %>
                  <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
