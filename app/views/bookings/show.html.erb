<p>FROM <%= @booking.start_date %> TO <%= @booking.end_date %></p>
<b>TOTAL: $<%= @booking.total_cost %>

<% if policy(@booking).edit? %>
  <%= link_to 'Edit my booking', edit_booking_path(@booking) %>
