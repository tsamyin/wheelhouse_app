<%= simple_form_for(@tiny_home) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.select :available, [true, false] %>
    <%= f.input :price %>
    <%= f.input :room_number %>
    <%= f.input :size %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
